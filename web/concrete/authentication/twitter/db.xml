<?xml version="1.0"?>
<schema version="0.3">
    <table name="authTypeTwitterSettings">
        <field name="ID" type="I">
            <key />
            <unsigned />
            <autoincrement />
        </field>
        <field name='setting' type="C" size='255' />
        <field name='value' type="C" size='255' />
        <index name="settingKey">
            <UNIQUE/>
            <col>setting</col>
        </index>
    </table>
    <table name="authTypeTwitterUserData">
        <field name="uID" type="I" size='10'>
            <key />
            <unsigned />
            <autoincrement />
        </field>
        <field name="name" type="C" size='255' />
        <field name="username" type="C" size='255' />
        <field name="timezone" type="C" size='255' />
        <field name="locale" type="C" size='255' />
        <field name="updated_time" type="C" size='255' />
    </table>
    <table name="authTypeTwitterUserMap">
        <field name="uID" type="I" size='10'>
            <key />
        </field>
        <field name="twUserID" type="C" size='255' />
        <index name="User">
            <UNIQUE/>
            <col>uID</col>
        </index>
        <index name="twUser">
            <UNIQUE/>
            <col>twUserID</col>
        </index>
    </table>
</schema>
